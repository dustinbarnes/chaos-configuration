{
    "name": "chaos-configuration",
    "version": "0.0.1",
    "description": "Constraint-based configuration",
    "engines": {
        "node": ">= 12.4 <13"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/keyv": "^3.1.0",
        "@types/node": "^12.4.0",
        "@types/pino": "^5.8.13",
        "jest": "~24.9.0",
        "prettier": "~1.18.2",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.0.0",
        "tslint": "~5.19.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-microsoft-contrib": "~6.2.0",
        "tsutils": "~3.17.0",
        "typescript": "~3.6.0"
    },
    "scripts": {
        "clean": "rimraf coverage build tmp",
        "build": "tsc -p tsconfig.release.json",
        "build:watch": "tsc -w -p tsconfig.release.json",
        "lint": "tslint -t stylish --project \"tsconfig.json\"",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@overnightjs/core": "^1.6.9",
        "body-parser": "^1.19.0",
        "env-var": "^5.1.0",
        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "http-status-codes": "^1.4.0",
        "keyv": "^3.1.0",
        "pino": "^5.13.5",
        "pino-pretty": "^3.2.2",
        "pkginfo": "^0.4.1",
        "tslib": "~1.10.0"
    },
    "license": "Apache-2.0",
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    }
}
